<div class="login-form-wrapper col-12 col-sm-8 col-md-4 col-lg-4 col-xl-4">
    <form action="/auth/local" class="form" role="form" autocomplete="off" id="formLogin" method="post">
        <div class="text-center display-4">
            <span><img src="/public/assets/logo.png" alt="">Login</span>
        </div>
        <br>
        <div class="form-group">
            <input type="text" class="form-control" name="username" id="username" placeholder="Username" required=>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
        </div>
        <button type="submit" id="loginBtn" class="btn btn-success btn-block">Let me in.</button>
        <a href="/auth/anonymous" class="btn btn-danger btn-block">Man, I'm high/lazy</a>
        <p class="text-center">Still no account? <span><a href="/register">Create one here</a></span></p>
    </form>
</div>

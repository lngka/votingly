
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="/public/assets/favicon.ico">
    <title>Yet another voteApp</title>
    <!-- Bootstrap core CSS -->
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/public/css/main.css" rel="stylesheet">
    <!-- additional css -->
    {{#if css}}
    <link href={{css}} rel="stylesheet">
    {{/if}}
  </head>
  <body>
      <!-- navbar's configuration -->
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse fixed-top">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsCollapseWrapper" aria-controls="navbarsCollapseWrapper" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#"><img id="logo" src="/public/assets/logo.w5" alt="logo"></a>
      <div class="collapse navbar-collapse" id="navbarsCollapseWrapper">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/allpolls">All polls</a>
          </li>
          {{#if user}}
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Menu</a>
                <div class="dropdown-menu" aria-labelledby="dropdown01">
                  <a class="dropdown-item" href="/create">Create new poll</a>
                  {{#if anonymous}}
                  <a class="dropdown-item" href="#" data-toggle="tooltip" title="Registered users only" data-placement="right" disabled>My polls</a>
                  {{else}}
                  <a class="dropdown-item" href="/mypolls">My polls</a>
                  {{/if}}
                </div>
              </li>
              {{else}} <!--when user not logged in -->
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
           {{/if}} <!--end if user -->
        </ul>
      </div>
    </nav>


    <!-- main content's container -->
    <div class="container">
        <!-- area for flash messages -->
        {{#if error }}
            <div class="alert alert-danger fade show">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <strong>Error!</strong> {{error}}
            </div>
        {{/if}}
        {{#if success }}
            <div class="alert alert-success fade show">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <strong>Success!</strong> {{success}}
            </div>
        {{/if}}
        {{#if message}}
            <div class="alert alert-info fade show">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Info!</strong> {{message}}
            </div>
        {{/if}}
        <!-- body placeholder, content comes from individual template -->
        {{{body}}}
    </div><!-- end container -->
    <!-- footer & credits -->
    <footer class="footer">
      <div class="container">
        <span class="text-muted font-italic">by <a href="https://github.com/lngka/votingly">lngka</a></span>
      </div>
    </footer>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/public/js/jquery-3.2.1.slim.min.js"></script>
    <script src="/public/js/tether.min.js"></script>
    <script src="/public/js/bootstrap.min.js"></script>
    <!-- tooltip enabling script -->
    <script src="/public/js/bootstrap.tooltips.enabler.js"></script>
  </body>
</html>
